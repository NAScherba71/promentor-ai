{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Debug AI Engine",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "promentor-remote",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/ai-engine",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Node.js: Remote Debug Backend",
            "type": "node",
            "request": "attach",
            "address": "promentor-remote",
            "port": 9229,
            "localRoot": "${workspaceFolder}/backend",
            "remoteRoot": "/app",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}